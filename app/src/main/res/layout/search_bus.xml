<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/darker_gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Heading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Bus Timings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="16dp"
            android:background="@android:color/holo_blue_dark" />

        <!-- Search by Bus Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Bus Name"
            app:boxBackgroundMode="outline"
            android:layout_marginVertical="8dp">
            <EditText
                android:id="@+id/et_search_bus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_search_bus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Bus"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            app:backgroundTint="@android:color/holo_blue_dark" />

        <!-- Source & Destination Search -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Source"
            app:boxBackgroundMode="outline"
            android:layout_marginVertical="8dp">

            <EditText
                android:id="@+id/et_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Destination"
            app:boxBackgroundMode="outline"
            android:layout_marginBottom="12dp">
            <EditText
                android:id="@+id/et_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_find_buses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Buses"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            app:backgroundTint="@android:color/holo_blue_dark"/>

        <!-- Dropdown Selections -->
        <Spinner
            android:id="@+id/spinner_district"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/holo_blue_dark" />

        <Spinner
            android:id="@+id/spinner_taluk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/holo_blue_dark" />

        <Spinner
            android:id="@+id/spinner_bus_stand"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/holo_blue_dark" />

        <Spinner
            android:id="@+id/spinner_route"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/holo_blue_dark" />

        <Spinner
            android:id="@+id/spinner_bus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/holo_blue_dark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show_bus_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Bus Details"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            app:backgroundTint="@android:color/holo_blue_dark" />

    </LinearLayout>
</ScrollView>
